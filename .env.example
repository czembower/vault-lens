# LLM provider selection
# Supported values: anthropic (default), openai
LLM_PROVIDER=anthropic

# Required when LLM_PROVIDER=anthropic
ANTHROPIC_API_KEY=sk_

# Required when LLM_PROVIDER=openai
OPENAI_API_KEY=sk-
# Optional model override for OpenAI provider (default in code: gpt-5.2)
OPENAI_MODEL=gpt-5.2

# Vault MCP servers (stdio command paths)
# Path or command name for the Vault MCP server binary
VAULT_MCP_COMMAND=./vault-mcp-server
# Path or command name for the Vault Audit MCP server binary
VAULT_AUDIT_MCP_COMMAND=./vault-audit-mcp

# Loki endpoint consumed by vault-audit-mcp
LOKI_URL=http://localhost:3100

# OIDC callback URL used by server auth manager
VAULT_OIDC_REDIRECT_URI=http://localhost:8250/oidc/callback

# Optional: enable verbose MCP stdio client logging
VAULTLENS_MCP_DEBUG_LOGS=false

# Backend API server port
API_PORT=3001

# Frontend dev server port
VITE_PORT=5173
